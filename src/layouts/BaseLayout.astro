---
import BaseHead from "~/components/BaseHead.astro";
import Header from "~/components/ui/Header.astro";
import type { Lang } from "~/content.config";
import "~/styles/tailwind.css";

interface Props {
  title: string;
  description: string;
  lang?: Lang;
}

const { title, description, lang = "en" } = Astro.props;
---

<!doctype html>
<html class="scroll-smooth" lang={lang === "en" ? "en" : "ko-KR"}>
  <head>
    <BaseHead description={description} title={title} />
  </head>
  <body
    class="min-h-[100dvh] bg-gray-50 text-gray-700 antialiased selection:bg-indigo-200"
  >
    <Header />
    <main class="mx-auto max-w-3xl px-4 py-8 pb-16 sm:px-6 sm:py-12">
      <slot />
    </main>
  </body>
</html>
