---
import BaseLayout from "~/layouts/BaseLayout.astro";
import { socialLinks } from "~/data/social";
import Title from "~/components/ui/Title.astro";
import Link from "~/components/ui/Link.astro";
import Description from "~/components/ui/Description.astro";

const meta = {
  title: "Junseong Park",
  description:
    "Frontend Developer building and shipping great products while growing in tech.",
};
---

<BaseLayout {...meta}>
  <Title>{meta.title}</Title>
  <Description class="mb-6">
    {meta.description}
  </Description>
  <ul class="flex flex-wrap gap-x-8 gap-y-3">
    {
      socialLinks.map(({ name, url, icon: Icon }) => (
        <li>
          <Link
            class="flex items-center gap-1 hover:text-gray-800 hover:underline lg:text-lg"
            href={url}
            target="_blank"
            title={name}
          >
            <Icon size={20} />
            {name}
          </Link>
        </li>
      ))
    }
  </ul>
</BaseLayout>
