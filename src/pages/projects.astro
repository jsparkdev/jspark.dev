---
import Layout from "~/layouts/Layout.astro";
import { projects } from "~/data/projects";
import Link from "~/components/Link.astro";

const meta = {
  title: "Projects",
  description: "Here's my collection of projects that I built.",
};
---

<Layout {...meta}>
  <div>
    <h1 class="mb-6 text-3xl font-bold">My Projects</h1>
    <div class="grid gap-6 md:grid-cols-2">
      {
        projects.map((project) => (
          <div class="rounded-lg border p-6 shadow-sm">
            <h2 class="mb-2 text-2xl font-semibold">{project.title}</h2>
            <p class="mb-4 text-gray-600">{project.description}</p>
            <div class="mb-4">
              <h3 class="mb-2 text-lg font-semibold">Technologies used:</h3>
              <ul class="list-inside list-disc">
                {project.technologies.map((tech) => (
                  <li class="text-gray-600">{tech}</li>
                ))}
              </ul>
            </div>
            <Link
              class="text-blue-600 hover:underline"
              href={project.url}
              target="_blank"
            >
              View project details
            </Link>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
