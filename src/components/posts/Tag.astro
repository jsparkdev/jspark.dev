---
import type { HTMLAttributes } from "astro/types";
import { TagIcon } from "~/assets/ui";

interface Props extends HTMLAttributes<"span"> {
  tag: string;
}

const { tag, ...attrs } = Astro.props;
---

<span
  class="flex items-center gap-1.5 rounded-full bg-gray-200 px-3 py-1 text-sm"
  {...attrs}
>
  <TagIcon size={16} />
  {tag}
</span>
